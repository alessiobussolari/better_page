<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Disabled Input</h3>

  <%= form_with model: Product.new, url: "#", method: :post do |f| %>
    <div class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Disabled</label>
        <%= render BetterPage::Form::InputComponent.new(
          form: f,
          field_name: :disabled_field,
          field_type: :text,
          disabled: true,
          value: "Cannot edit this"
        ) %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Readonly</label>
        <%= render BetterPage::Form::InputComponent.new(
          form: f,
          field_name: :readonly_field,
          field_type: :text,
          readonly: true,
          value: "Read only value"
        ) %>
      </div>
    </div>
  <% end %>
</div>
