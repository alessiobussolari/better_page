<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Validated Input</h3>

  <%= form_with model: Product.new, url: "#", method: :post do |f| %>
    <div class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Required Field</label>
        <%= render BetterPage::Form::InputComponent.new(
          form: f,
          field_name: :required_field,
          field_type: :text,
          required: true,
          placeholder: "This field is required"
        ) %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Field with Error</label>
        <%= render BetterPage::Form::InputComponent.new(
          form: f,
          field_name: :error_field,
          field_type: :text,
          error: "This field has an error"
        ) %>
        <p class="mt-1 text-sm text-red-600">This field has an error</p>
      </div>
    </div>
  <% end %>
</div>
