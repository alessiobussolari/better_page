<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Select with Prompt</h3>

  <%= form_with model: Product.new, url: "#", method: :post do |f| %>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
      <%= render BetterPage::Form::SelectComponent.new(
        form: f,
        field_name: :status,
        options_list: [["Active", "active"], ["Inactive", "inactive"], ["Pending", "pending"]],
        prompt: "Select a status..."
      ) %>
    </div>
  <% end %>
</div>
