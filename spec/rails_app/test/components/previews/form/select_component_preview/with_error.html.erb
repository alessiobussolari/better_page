<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Select with Error</h3>

  <%= form_with model: Product.new, url: "#", method: :post do |f| %>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Category</label>
      <%= render BetterPage::Form::SelectComponent.new(
        form: f,
        field_name: :category,
        options_list: [["Electronics", "electronics"], ["Clothing", "clothing"]],
        prompt: "Select a category",
        error: "Category is required"
      ) %>
      <p class="mt-1 text-sm text-red-600">Category is required</p>
    </div>
  <% end %>
</div>
