<%= render BetterPage::Ui::TabsComponent.new(id: "tabs-with-links") do |tabs| %>
  <% tabs.with_tab(id: "overview", label: "Overview") do %>
    <div class="p-4 bg-gray-50 rounded-lg">
      <h3 class="text-lg font-medium text-gray-900">Product Overview</h3>
      <p class="mt-2 text-gray-600">
        This is the main content tab with detailed information about the product.
        The other tabs in this example are navigation links that would take you to different pages.
      </p>
      <div class="mt-4 grid grid-cols-2 gap-4">
        <div class="bg-white p-3 rounded border">
          <span class="text-sm text-gray-500">Price</span>
          <p class="text-lg font-semibold text-gray-900">$99.00</p>
        </div>
        <div class="bg-white p-3 rounded border">
          <span class="text-sm text-gray-500">Stock</span>
          <p class="text-lg font-semibold text-green-600">In Stock</p>
        </div>
      </div>
    </div>
  <% end %>

  <% tabs.with_tab(id: "reviews", label: "Reviews", href: "#reviews") %>

  <% tabs.with_tab(id: "specifications", label: "Specifications", href: "#specs") %>

  <% tabs.with_tab(id: "related", label: "Related Products", href: "#related", active: true) %>
<% end %>

<div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-200">
  <h4 class="text-sm font-medium text-blue-800">About this example</h4>
  <ul class="mt-2 text-sm text-blue-700 list-disc list-inside space-y-1">
    <li><strong>Overview</strong> - Regular content tab with panel</li>
    <li><strong>Reviews, Specifications</strong> - Link tabs (navigate to different pages)</li>
    <li><strong>Related Products</strong> - Active link tab (with <code class="bg-blue-100 px-1 rounded">active: true</code>)</li>
  </ul>
</div>
