<%= render BetterPage::Ui::TabsComponent.new(id: "tabs-default-selected", default_tab: "billing") do |tabs| %>
  <% tabs.with_tab(id: "general", label: "General") do %>
    <div class="p-4 bg-gray-50 rounded-lg">
      <h3 class="text-lg font-medium text-gray-900">General Settings</h3>
      <p class="mt-2 text-gray-600">
        General application settings and preferences.
      </p>
    </div>
  <% end %>

  <% tabs.with_tab(id: "billing", label: "Billing") do %>
    <div class="p-4 bg-gray-50 rounded-lg">
      <h3 class="text-lg font-medium text-gray-900">Billing Information</h3>
      <p class="mt-2 text-gray-600">
        This tab is selected by default using the <code class="bg-gray-200 px-1 rounded">default_tab: "billing"</code> parameter.
      </p>
      <div class="mt-4 p-4 bg-white rounded border border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="font-medium">Pro Plan</p>
            <p class="text-sm text-gray-500">$29/month</p>
          </div>
          <button type="button" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">
            Upgrade
          </button>
        </div>
      </div>
    </div>
  <% end %>

  <% tabs.with_tab(id: "team", label: "Team") do %>
    <div class="p-4 bg-gray-50 rounded-lg">
      <h3 class="text-lg font-medium text-gray-900">Team Members</h3>
      <p class="mt-2 text-gray-600">
        Manage your team members and their permissions.
      </p>
    </div>
  <% end %>
<% end %>
