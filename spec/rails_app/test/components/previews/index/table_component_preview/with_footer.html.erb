<div class="p-8 bg-gray-100 min-h-screen">
  <h1 class="text-2xl font-bold text-gray-900 mb-4">Table with Footer</h1>
  <p class="text-gray-600 mb-6">Table component with a footer slot for pagination and summary data.</p>

  <%
    items = [
      { id: 1, name: "iPhone 15", price: 999.00, stock: 50, category: "Phones" },
      { id: 2, name: "MacBook Pro", price: 2499.00, stock: 25, category: "Laptops" },
      { id: 3, name: "AirPods Pro", price: 249.00, stock: 100, category: "Audio" },
      { id: 4, name: "iPad Air", price: 599.00, stock: 75, category: "Tablets" },
      { id: 5, name: "Apple Watch", price: 399.00, stock: 60, category: "Wearables" }
    ]

    columns = [
      { key: :name, label: "Product" },
      { key: :price, label: "Price", format: :currency },
      { key: :stock, label: "Stock" },
      { key: :category, label: "Category" }
    ]
  %>

  <%= render BetterPage::Ui::TableComponent.new(items: items, columns: columns) do |table| %>
    <% table.with_footer do %>
      <div class="flex items-center justify-between">
        <div class="text-sm text-gray-700">
          Showing <span class="font-medium">1</span> to <span class="font-medium">5</span> of <span class="font-medium">50</span> results
        </div>
        <nav class="flex items-center gap-1">
          <button type="button" class="px-3 py-1.5 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50 disabled:opacity-50" disabled>
            Previous
          </button>
          <button type="button" class="px-3 py-1.5 text-sm font-medium text-white bg-blue-600 border border-blue-600 rounded-md">
            1
          </button>
          <button type="button" class="px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
            2
          </button>
          <button type="button" class="px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
            3
          </button>
          <span class="px-2 text-gray-500">...</span>
          <button type="button" class="px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
            10
          </button>
          <button type="button" class="px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
            Next
          </button>
        </nav>
      </div>
    <% end %>
  <% end %>
</div>
