<button
  onclick="Stimulus.getControllerForElementAndIdentifier(document.querySelector('#drawer-top'), 'drawer').open()"
  class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
  Open Drawer (Top)
</button>

<%= render BetterPage::Ui::DrawerComponent.new(
  id: "drawer-top",
  title: "Top Drawer",
  direction: :top
) do %>
  <p class="text-gray-700">
    This drawer slides down from the top.
  </p>
  <p class="mt-4 text-gray-600">
    Perfect for notifications, alerts, or quick actions.
  </p>
<% end %>
