<button
  onclick="Stimulus.getControllerForElementAndIdentifier(document.querySelector('#drawer-bottom'), 'drawer').open()"
  class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
  Open Drawer (Bottom)
</button>

<%= render BetterPage::Ui::DrawerComponent.new(
  id: "drawer-bottom",
  title: "Bottom Drawer",
  direction: :bottom
) do %>
  <p class="text-gray-700">
    This drawer slides up from the bottom.
  </p>
  <p class="mt-4 text-gray-600">
    Ideal for mobile interfaces - similar to iOS/Android bottom sheets.
  </p>
<% end %>
