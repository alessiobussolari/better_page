<div class="max-w-4xl mx-auto py-8">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Edit Product</h1>
    <nav class="mt-2 text-sm text-gray-500">
      <a href="#" class="hover:text-gray-700">Home</a>
      <span class="mx-2">/</span>
      <a href="#" class="hover:text-gray-700">Products</a>
      <span class="mx-2">/</span>
      <a href="#" class="hover:text-gray-700">iPhone 15</a>
      <span class="mx-2">/</span>
      <span>Edit</span>
    </nav>
  </div>

  <%= form_with model: Product.new, url: "#", method: :patch do |f| %>
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Basic Information</h3>
      </div>
      <div class="p-6 space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
          <input type="text" name="product[name]" value="iPhone 15" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <textarea name="product[description]" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg">The latest iPhone with advanced features.</textarea>
        </div>
      </div>
    </div>

    <div class="flex justify-between">
      <button type="button" class="px-4 py-2 text-red-600 bg-white border border-red-300 rounded-lg hover:bg-red-50">Delete Product</button>
      <div class="flex gap-4">
        <a href="#" class="px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">Cancel</a>
        <button type="submit" class="px-4 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700">Save Changes</button>
      </div>
    </div>
  <% end %>
</div>
