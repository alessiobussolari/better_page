<div id="form-errors">
  <% if has_form_errors? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-4" data-testid="form-errors">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800" data-testid="form-errors-count">
            <%= form_errors_title %>
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc space-y-1 pl-5">
              <% form_object.errors.each_with_index do |error, index| %>
                <li data-testid="form-error-item-<%= index %>"><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if has_custom_errors? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 <%= has_form_errors? ? 'mt-4' : '' %> mb-4" data-testid="form-custom-errors">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800" data-testid="form-custom-errors-title">
            <%= custom_errors_title %>
          </h3>
          <div class="mt-2 text-sm text-red-700" data-testid="form-custom-errors-message">
            <%= custom_errors[:message] %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
