<%# Contenitore esterno trasparente con padding %>
<div class="<%= wrapper_classes %>">
  <nav id="<%= id %>"
       class="<%= tab_bar_classes %>"
       data-controller="tab-bar"
       role="navigation"
       aria-label="Mobile navigation">
    <div class="flex items-stretch h-16">
      <% tabs.each do |tab| %>
        <a href="<%= tab.href %>"
           class="<%= tab.item_classes %>"
           data-tab-bar-target="tab"
           data-tab-id="<%= tab.id %>"
           data-action="click->tab-bar#select"
           aria-current="<%= tab.active? ? 'page' : 'false' %>">
          <span class="relative">
            <% if tab.icon? %>
              <span class="w-6 h-6 inline-block">
                <%= tab.current_icon %>
              </span>
            <% else %>
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
              </svg>
            <% end %>

            <%# Badge or dot %>
            <% if tab.badge? %>
              <span class="absolute -top-1 -right-1 inline-flex items-center justify-center min-w-[16px] h-4 px-1 text-xs font-bold leading-none text-white bg-red-500 rounded-full">
                <%= tab.badge %>
              </span>
            <% elsif tab.dot? %>
              <span class="absolute -top-0.5 -right-0.5 w-2 h-2 bg-red-500 rounded-full"></span>
            <% end %>
          </span>
          <span class="<%= tab.label_classes %>"><%= tab.label %></span>
        </a>
      <% end %>
    </div>
  </nav>
</div>
