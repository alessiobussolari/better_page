<% content_for :title, show_header[:title] if should_render_header? %>

<div class="min-h-full" data-testid="show-page">
  <div class="py-6 px-4 sm:px-6 lg:px-8">

    <% if should_render_header? %>
      <%= render BetterPage::Common::HeaderComponent.new(**show_header) %>
    <% end %>

    <% if should_render_alerts? %>
      <%= render BetterPage::Common::AlertsComponent.new(items: show_alerts) %>
    <% end %>

    <% if should_render_statistics? %>
      <%= render BetterPage::Common::StatisticsComponent.new(items: show_statistics) %>
    <% end %>

    <% if should_render_details? %>
      <%= render BetterPage::Common::DetailsComponent.new(**show_details) %>
    <% end %>

    <% if should_render_footer? %>
      <%= render BetterPage::Common::FooterComponent.new(**show_footer) %>
    <% end %>

  </div>
</div>
