<div class="flex flex-col lg:flex-row gap-6">
  <div class="w-full <%= left_panel_classes %>">
    <% if left_panel_config[:title].present? %>
      <h3 class="text-lg font-medium text-gray-900 mb-4"><%= left_panel_config[:title] %></h3>
    <% end %>
    <% if left_panel? %>
      <%= left_panel %>
    <% elsif left_panel_config[:partial].present? %>
      <%= render partial: left_panel_config[:partial], locals: left_panel_config[:locals] || {} %>
    <% elsif left_panel_config[:content].present? %>
      <%= left_panel_config[:content].html_safe %>
    <% end %>
  </div>

  <div class="w-full <%= right_panel_classes %>">
    <% if right_panel_config[:title].present? %>
      <h3 class="text-lg font-medium text-gray-900 mb-4"><%= right_panel_config[:title] %></h3>
    <% end %>
    <% if right_panel? %>
      <%= right_panel %>
    <% elsif right_panel_config[:partial].present? %>
      <%= render partial: right_panel_config[:partial], locals: right_panel_config[:locals] || {} %>
    <% elsif right_panel_config[:content].present? %>
      <%= right_panel_config[:content].html_safe %>
    <% end %>
  </div>
</div>
