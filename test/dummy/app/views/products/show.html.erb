<% content_for :title, @page[:header][:title] %>

<div class="container mx-auto px-4 py-8">
  <!-- Flash Messages -->
  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>

  <!-- Header -->
  <div class="mb-8">
    <nav class="text-sm mb-2">
      <% @page[:header][:breadcrumbs].each_with_index do |crumb, index| %>
        <% if crumb[:path] %>
          <%= link_to crumb[:label], crumb[:path], class: "text-blue-600 hover:underline" %>
        <% else %>
          <span class="text-gray-500"><%= crumb[:label] %></span>
        <% end %>
        <% unless index == @page[:header][:breadcrumbs].size - 1 %>
          <span class="mx-2">/</span>
        <% end %>
      <% end %>
    </nav>

    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold"><%= @page[:header][:title] %></h1>
        <div class="flex gap-4 mt-2">
          <% @page[:header][:metadata].each do |meta| %>
            <span class="text-gray-500"><%= meta[:label] %>: <strong><%= meta[:value] %></strong></span>
          <% end %>
        </div>
      </div>

      <div class="flex gap-2">
        <% @page[:header][:actions].each do |action| %>
          <% if action[:method] == :delete %>
            <%= button_to action[:path], method: :delete,
                data: { turbo_confirm: action[:confirm] },
                class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" do %>
              <%= action[:label] %>
            <% end %>
          <% else %>
            <%= link_to action[:path], class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" do %>
              <%= action[:label] %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Statistics -->
  <% if @page[:statistics].any? %>
    <div class="grid grid-cols-3 gap-4 mb-8">
      <% @page[:statistics].each do |stat| %>
        <div class="bg-white p-4 rounded shadow">
          <div class="text-2xl font-bold"><%= stat[:value] %></div>
          <div class="text-gray-500"><%= stat[:label] %></div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Content Sections -->
  <div class="space-y-6">
    <% @page[:content_sections].each do |section| %>
      <div class="bg-white rounded shadow">
        <div class="px-6 py-4 border-b">
          <h2 class="text-xl font-semibold"><%= section[:title] %></h2>
        </div>
        <div class="p-6">
          <% if section[:type] == :info_grid %>
            <dl class="grid grid-cols-2 gap-4">
              <% section[:items].each do |item| %>
                <div>
                  <dt class="text-gray-500 text-sm"><%= item[:name] %></dt>
                  <dd class="font-medium"><%= item[:value] %></dd>
                </div>
              <% end %>
            </dl>
          <% elsif section[:type] == :text_content %>
            <p class="text-gray-700"><%= section[:content] %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
